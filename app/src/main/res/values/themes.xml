<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Platisa" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <!-- Splash theme uses windowBackground for full-screen image -->
    <style name="Theme.Platisa.Splash" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowSplashScreenBackground">#080B16</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Platisa</item>
    </style>
</resources>